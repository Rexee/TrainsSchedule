<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_recyclerview"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeparture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="00:00"
        android:textColor="@color/textMain"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvArrive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:hint="00"
        android:text="00:00"
        android:textColor="@color/textMain"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDuration"
        android:layout_marginLeft="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="00 час 00 мин"
        android:textColor="@color/textMain"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeToWait"
        android:text="через 00 час 00 мин"
        android:textColor="@color/textTimeToWait"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRoute"
        android:layout_below="@+id/tvArrive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Маршрут - Маршрут"
        android:textColor="@color/textMinor"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvExclude"
        android:layout_below="@+id/tvRoute"
        android:text="кроме станций"
        android:textColor="@color/textMinor"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textViewDiv1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:textColor="@color/textMain"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textViewDiv2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:textColor="@color/textMain"
        android:textSize="16sp"
        android:visibility="invisible" />
</RelativeLayout>