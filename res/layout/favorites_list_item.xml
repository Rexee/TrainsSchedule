<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_recyclerview"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFavFrom"
        android:text="00:00"
        android:textColor="@color/textMain"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgFavClear"
        android:layout_toStartOf="@+id/imgFavClear" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgFavClear"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_clear_search_api_holo_light"
        android:layout_centerVertical="true" />


</RelativeLayout>